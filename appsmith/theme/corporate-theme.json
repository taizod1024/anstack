{
  "name": "ANStack Corporate Theme",
  "displayName": "ANStack統一テーマ",
  "config": {
    "colors": {
      "primaryColor": "#0066cc",
      "backgroundColor": "#ffffff",
      "secondaryColor": "#6c757d",
      "textColor": "#212529",
      "textOnDarkBG": "#ffffff"
    },
    "borderRadius": {
      "appBorderRadius": "8px"
    },
    "boxShadow": {
      "appBoxShadow": "0 2px 4px rgba(0,0,0,0.1)"
